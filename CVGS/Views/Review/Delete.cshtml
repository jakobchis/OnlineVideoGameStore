@model CVGS.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Game
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            Username
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            Review
        </dt>
        <dd class="col-sm-10" style="white-space:pre-line; border:groove;">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recommended)
        </dt>
        @{
            if (Model.Recommended)
            {
                <dd class="col-sm-10">Yes</dd>
            }
            else
            {
                <dd class="col-sm-10">No</dd>
            }
            <dt class="col-sm-2">
                Approved
            </dt>
            if (Model.Approved == null)
            {
                <dd class="col-sm-10">Unread</dd>
            }
            else if (Model.Approved == false)
            {
                <dd class="col-sm-10">No</dd>
            }
            else
            {
                <dd class="col-sm-10">Yes</dd>
            }
        }
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
