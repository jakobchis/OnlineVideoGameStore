@model List<CVGS.Models.GameImage>
    <ol class="carousel-indicators">
        @{
            var i = 0;
            foreach (var item in Model)
            {
                if (item.File != null)
                {
                    if (i == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                    }
                    i++;
                }
            }
            if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @{
            var j = 0;
            foreach (var item in Model)
            {
                if (item.File != null)
                {
                    if (j == 0)
                    {
                        var base64 = Convert.ToBase64String(item.File);
                        var imagesrc = string.Format("data:image/jpeg;base64,{0}", base64);
                        <div class="carousel-item active">
                            <img class="d-block w-100 slide-game" src="@imagesrc" alt="First slide">
                        </div>
                    }
                    else
                    {
                        var base64 = Convert.ToBase64String(item.File);
                        var imagesrc = string.Format("data:image/jpeg;base64,{0}", base64);
                        <div class="carousel-item">
                            <img class="d-block w-100 slide-game" src="@imagesrc" alt="Second slide">
                        </div>
                    }
                    j++;
                }
            }
            if (i == 0)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100 slide-game" src="~/img/game-controller.jpg">
                </div>
            }
        }
    </div>
<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
</a>
<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
</a>